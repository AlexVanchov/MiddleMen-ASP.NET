@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">

            <div class="profile-avatar">
                <img class="img-responsive profimg" src="@Model.ProfilePhotoUrl" style="padding: 5px;" alt="profile picture">
            </div>

            <h4>Profile Photo</h4>
            <div class="form-group">
                <label asp-for="Input.ProfilePhoto" class="upload-btn">
                    <i class="fa fa-upload"></i> Upload
                    <input asp-for="Input.ProfilePhoto" type="file" class="form-control" />
                    <span asp-validation-for="Input.ProfilePhoto" class="text-danger"></span>
                </label>
                <div class="margin-top-0"></div>
                <span id="file-selected"></span>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}