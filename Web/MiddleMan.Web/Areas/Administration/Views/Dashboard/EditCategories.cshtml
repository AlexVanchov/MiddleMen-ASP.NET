                    <span>@category.Name - Offers:</span>
                    <span class="badge">15</span>
                </div>
                <div class="d-inline-block text-right custom-edit-delete-btns">
                    <a href="/Administration/Dashboard/Edit/id_here" class="btn btn-warning">Edit</a>
                    <a href="/Administration/Dashboard/Delete/id_here" class="btn btn-danger">Delete</a>
                </div>
            </li>
        }
    </ul>

    <input class="disabled btn alert-success" type="submit" value="Save Changes">
</form>

