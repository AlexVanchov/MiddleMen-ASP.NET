@model UsersViewModel
@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

<link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css">
<hr>
<div class="container bootstrap snippet">
    <div class="row">
        <div class="col-lg-12">
            <div class="main-box no-header clearfix">
                <div class="main-box-body clearfix">
                    <div class="table-responsive">
                        <table class="table user-list">
                            <thead>
                                <tr>
                                    <th><span>User</span></th>
                                    <th><span>Registered</span></th>
                                    <th class="text-center"><span>Status</span></th>
                                    <th><span>Email</span></th>
                                    <th>&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model.Users)
                                {
                                    <tr>
                                        <td>
                                            <img src="@user.PicUrl" alt="">
                                            <a class="a-user-admin" href="/User/Profile?id=@user.UserId" class="user-link">@user.Username</a>
                                            <span class="user-subhead">Member</span>
                                        </td>
                                        <td>@user.RegisteredOn</td>
                                        <td class="text-center">
                                            @if (user.IsDeleted)
                                            {
                                                <span class="label label-default">Banned</span>
                                            }
                                            else
                                            {
                                                <span class="label label-default">Active</span>
                                            }
                                        </td>
                                        <td>
                                            <a class="a-user-admin" href="/User/Profile?id=@user.UserId">@user.Email</a>
                                        </td>
                                        @if(!user.IsDeleted)
                                        { 
                                        <td style="width: 20%;">
                                            <a href="Ban?id=@user.UserId" class="table-link danger">
                                                <span class="fa-stack">
                                                    <i class="fa fa-square fa-stack-2x"></i>
                                                    <i class="fa fa-ban fa-stack-1x fa-inverse"></i>
                                                </span>
                                            </a>
                                        </td>
                                        }
                                        else 
                                        {
                                        <td style="width: 20%;">
                                            <a href="Unban?id=@user.UserId" class="table-link">
                                                <span class="fa-stack">
                                                    <i class="fa fa-square fa-stack-2x"></i>
                                                    <i class="fa fa-user-plus fa-stack-1x fa-inverse"></i>
                                                </span>
                                            </a>
                                        </td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
