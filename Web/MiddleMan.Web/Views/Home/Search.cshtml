@using MiddleMan.Web.ViewModels.Search
@model SearchInputModel

@{
    ViewData["Title"] = "Search";
}

<h1>Search</h1>

<form asp-controller="Offer" asp-action="Search" method="get">
    <div class="container">
        <div class="row">
            <div class="col-xs-8 col-xs-offset-2" style="width: 100%;">
                <div class="input-group">
                    <input asp-for="@Model.SearchWord" class="form-control mr-sm-2" type="text" placeholder="Search offers by name or description" aria-label="Search">
                    <button class="btn btn-success btn-rounded btn-sm my-0" type="submit">Search</button>
                </div>
            </div>
        </div>
    </div>
</form>

<div>
    <h3></h3>
</div>
