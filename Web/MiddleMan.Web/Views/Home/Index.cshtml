@using MiddleMan.Web.ViewModels.ViewModels
@model HomeViewModel
@{
    this.ViewData["Title"] = "Home Page";
}

<!-- Page Content -->
<div class="container">

    <div class="row">

        <div class="col-lg-3">

            <h1 class="my-4">MiddleMan</h1>
            <div class="list-group">
                @foreach (var category in Model.Categories)
                {
                    <a href="/Home/Category?name=@category.Name" class="list-group-item">@category.Name</a>
                }
            </div>

        </div>
        <!-- /.col-lg-3 -->

        <div class="col-lg-9">

            <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
                <ol class="carousel-indicators">
                    @for (int i = 0; i < Model.FeaturedOffers.Count; i++)
                    {
                        if (i == 0)
                        {
                            <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="active custom-slide-li"></li>
                        }
                        else
                        {

                            <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="custom-slide-li"></li>
                        }
                    }
                </ol>
                <div class="carousel-inner" role="listbox" style="background-color:darkgray;">

                    @for (int i = 0; i < Model.FeaturedOffers.Count; i++)
                    {
                        if (i == 0)
                        {
                            <div class="carousel-item active">
                                @*<img class="d-block img-fluid" src="@offer.PicUrl" alt="Slide">*@
                                <a href="@Model.FeaturedOffers[i].ClickUrl">
                                    <img class="d-block img-fluid" src="@Model.FeaturedOffers[i].PicUrl" alt="" style="margin:auto; max-width:100%; max-height:100%; height:auto; width: auto;">
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item">
                                @*<img class="d-block img-fluid" src="@offer.PicUrl" alt="Slide">*@
                                <a href="@Model.FeaturedOffers[i].ClickUrl">
                                    <img class="d-block img-fluid" src="@Model.FeaturedOffers[i].PicUrl" alt="" style="margin:auto; max-width:100%; max-height:100%; height:auto; width: auto;">
                                </a>
                            </div>
                        }
                    }
                    @*<div class="carousel-item">
                            <img class="d-block img-fluid" src="http://placehold.it/900x350" alt="Second slide">
                        </div>*@
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

            <h2 class="my-4">Latest offers:</h2>
            <div class="row">


                @foreach (var offer in Model.LatestOffers)
                {
                    <vc:index-offer view-model="@offer"></vc:index-offer>
                    @*@await Component.Invoke("IndexOffer", offer)*@
                }

            </div>
            <!-- /.row -->

        </div>
        <!-- /.col-lg-9 -->

    </div>
    <!-- /.row -->

</div>
<!-- /.container -->
